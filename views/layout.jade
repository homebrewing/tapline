doctype html
head
        title= title
        link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Julius+Sans+One|Roboto')
        link(rel='stylesheet', href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css')
        link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.min.css')
        #link(rel='stylesheet', href='http://www.malt.io/static/styles/main.css')
        link(rel='stylesheet', href='/styles/tapline.css')
    body(style="margin-top: 64px;")
        .navbar.navbar-inverse.navbar-fixed-top
            .navbar-inner
                .container
                    a.brand(href="/") <span style="">Malt<span style="opacity: 0.5">.io</span></span>
                    ul.nav
                        li: a(href="") dashboard
                        li: a(href="") recipes
                        li: a(href="") users
                    ul.nav.pull-right
                        if user
                            li.dropdown
                                a.dropdown-toggle(href="#", data-toggle="dropdown") #{user.name} <b class="caret"></b>
                                ul.dropdown-menu
                                    li: a(href="/account") account
                                    li: a(href="/account/apps") apps
                                    li: a(href="/account/logout") logout
                        else
                            li: a(href="/account/login") login / register

        div#contentContainer.container
            block content

        .footer
            .container Copyright &copy; 2013 Malt.io

        script(type="text/javascript", src="http://code.jquery.com/jquery-1.10.2.min.js")
        script(src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js")

        block scripts
